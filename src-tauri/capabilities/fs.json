{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "fs",
  "description": "file system access",
  "local": true,
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**/*" }]
    },
    "fs:allow-read-text-file",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-rename",
    "fs:allow-write-file",
    "fs:allow-write-text-file"
  ]
}
